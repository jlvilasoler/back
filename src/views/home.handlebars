<div class="container">
    <div class="row">
        {{#each products}}
        <div class="mb-3">
            <div class="card" style="width: 18rem;">
                <img src="{{this.thumbnail}}" class="card-img-top" alt="...">
                <div class="card-body">
                    <h1 class="card-text"> {{this.title}}</h1>
                    <h2 class="card-text"> {{this.description}}</h2>
                    <h2 class="card-text"> $ {{this.price}}</h2>
                    <a href="#" class="btn btn-primary">COMPRAR</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>

